{
  "name": "@vibestack/miaw-client",
  "version": "1.0.0",
  "description": "A client for Salesforce Messaging for In-App and Web APIs",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/cwatkins/miaw-client.git"
  },
  "homepage": "https://github.com/cwatkins/miaw-client#readme",
  "bugs": {
    "url": "https://github.com/cwatkins/miaw-client/issues"
  },
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "lint": "eslint \"src/**/*.ts\"",
    "format": "prettier --write \"src/**/*.ts\"",
    "prepare": "npm run build",
    "prepublishOnly": "npm run lint",
    "test": "npm run test:unit && npm run test:integration",
    "test:unit": "jest --testPathIgnorePatterns=integration",
    "test:integration": "jest --testPathPattern=integration"
  },
  "keywords": [
    "salesforce",
    "messaging",
    "api",
    "client",
    "typescript",
    "sse",
    "real-time"
  ],
  "author": "Charles Watkins",
  "license": "ISC",
  "engines": {
    "node": ">=18.0.0"
  },
  "devDependencies": {
    "@types/jest": "29.5.14",
    "@types/node": "22.13.11",
    "@typescript-eslint/eslint-plugin": "8.27.0",
    "@typescript-eslint/parser": "8.27.0",
    "dotenv": "16.4.7",
    "eslint": "9.23.0",
    "jest": "29.7.0",
    "prettier": "3.5.3",
    "ts-jest": "29.3.0",
    "typescript": "5.8.2",
    "@eslint/js": "9.23.0",
    "globals": "16.0.0"
  },
  "dependencies": {
    "eventsource-client": "1.1.3"
  }
}
